@model DistanceLearning.Web.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/login.css" />
</head>

<body>
    <div>
        <div class="background">
            <div class="logo">Distance Learning</div>
            <div class="registration-block">
                <div class="enter">
                    <h1>Sing up</h1>
                </div>
                <div class="inputValues">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false)
                        <h4>Name</h4>
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "input", @placeholder = "Name" } })
                        <h4>Surname</h4>
                        @Html.EditorFor(m => m.SurName, new { htmlAttributes = new { @class = "input", @placeholder = "Surname" } })
                        <h4>Middle Name</h4>
                        @Html.EditorFor(m => m.MiddleName, new { htmlAttributes = new { @class = "input", @placeholder = "Middle Name" } })
                        <h4>E-mail</h4>
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "input", @placeholder = "E-mail" } })
                        <h4>Password</h4>
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "input", @placeholder = "Password" } })
                        <h4>Confirm the password</h4>
                        @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "input", @placeholder = "Password" } })
                        <input type="submit" value="SIGN UP" class="btn">
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
