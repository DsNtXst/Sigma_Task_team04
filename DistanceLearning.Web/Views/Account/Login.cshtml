@model DistanceLearning.Web.Models.LoginModel
    @{
        ViewBag.Title = "Login";
        Layout = "";
    }
    <!DOCTYPE html>
    <html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" media="screen" href="~/Content/login.css" />
    </head>
    <body>
        <div class="background">
            <div class="logo">Distance Learning</div>
            <div class="registration-block">
                <div class="enter">
                    <h1>Вход</h1>
                </div>

                <div class="inputValues">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "input", @placeholder = "E-mail" } })
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "input", @placeholder = "Password" } })
                        <input type="submit" value="SIGN IN" class="btn">
                    }
                    <form>
                        <input type="button" value="SIGN UP" class="btn" onClick='location.href="../../Account/Register"'>
                    </form>
                </div>
            </div>
        </div>
    </body>
    </html>

