
@{
    ViewBag.Title = "ViewLectorCabinet";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="../Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/CourseInfo.css">
</head>
<body>
    <div class="head_text">
        <img src="~/img/person.jpg" />
        <h1>Personal Area</h1>
    </div>
    <div class="list_lesson">
        <h2>Unconfirmed results of students</h2>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Student</th>
                    <th scope="col">Course</th>
                    <th scope="col">Result</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            @foreach (var b in ViewBag.ekzRez)
            {
                <tbody>
                    <tr>
                        <td>@b.UserEmail</td>

                        <td>@ViewBag.courses_names.Dequeue()</td>
                        <td>@b.Progress</td>
                        <td>
                            @using (Html.BeginForm("AcceptRezult", "Lector", FormMethod.Post))
                            {
                                <input type="hidden" name="rezId" value="@b.Id" />

                                <input class="btn btn-success" type="submit" value="Confirm" />


                            }

                            @using (Html.BeginForm("RejectRezult", "Lector", FormMethod.Post))
                            {
                                <input type="hidden" name="rezId" value="@b.Id" />

                                <input class="btn btn-danger" type="submit" value="Decline" />


                            }



                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</body>
</html>