@{
    ViewBag.Title = "ViewLessonEdit";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <link rel="stylesheet" href="~/Content/CourseInfo.css">
    <link rel="stylesheet" href="~/Content/TextBox.css">
    <br />
    <p>Редактирование урока @ViewBag.OneLesson.Name</p>
    <a href="/Lesson/ViewLessonAbout?id_lesson=@ViewBag.OneLesson.Id">
        Назад к уроку
    </a>
    @using (Html.BeginForm("Update", "Lesson", FormMethod.Post))
    {
        <input type="hidden" name="Id" value="@ViewBag.OneLesson.Id" />
        <input type="text" name="Name" class="input-style" value="@ViewBag.OneLesson.Name" /><br />
        <!--<input type="text" name="Information" value="@ViewBag.OneLesson.Information" />-->
        <textarea name="Information" class="input-style" cols="60" style="width: 100%; height: 400px;">@ViewBag.OneLesson.Information</textarea><br />
        <input class="input-style" type="submit" value="Сохранить изменения" />

    }
    <!--test-->
    <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
    <script type="text/javascript">
            bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
    </script>
</body>
</html>