
@{
    ViewBag.Title = "ViewLessonAdd";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/CourseInfo.css" type="text/css" >
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row-fluid">
            <div class="head_text">
                <h1>Adding a lesson to the course @ViewBag.Name</h1>
                <a class="btn btn-primary" href="/Courses/Course/@ViewBag.Id_course">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <b>Back to Course</b>
                </a>
            </div>
            <div class="list_lesson">
                @using (Html.BeginForm("Add", "Lesson", FormMethod.Post))
                {
                    <input type="hidden" name="CourseId" value="@ViewBag.Id_course" />
                    <p>
                        Enter the name<br />
                        <input class="input-style" type="text" name="Name" /><br />
                    </p>
        <!--<input type="text" name="Information" />-->
                    <p>
                        Enter information<br />
                        <textarea class="input-style" name="Information" cols="100" style="width: 100%; height: 400px;"></textarea><br />
                    </p>
                    <input class="btn btn-success" type="submit" value="Add" />


                }
            </div>
        </div>
    </div>
    <!--test-->
    <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
    <script type="text/javascript">
                    bkLib.onDomLoaded(function () { nicEditors.allTextAreas() });
    </script>
</body>
</html>
