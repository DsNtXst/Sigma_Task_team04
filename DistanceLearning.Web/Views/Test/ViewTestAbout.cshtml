@using DistanceLearning.Models;
@{
    ViewBag.Title = "О тесте";
}
@model DistanceLearning.Web.Models.Test
<h2>О тесте</h2>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <link rel="stylesheet" href="~/Content/CourseInfo.css">
    <link rel="stylesheet" href="~/Content/TextBox.css">
    <br />
    <h7 align="left"><font size="8"><font face="Times New Roman, Times, serif"><b>@Html.DisplayFor(model => model.Name)</b></font></font></h7>

    <!--TEST-->
    <p><h3>Кол-во вопросов</h3></p>
    <h7>@ViewData["ques"]</h7>
    <p><h3>Время на выполнение</h3></p>
    <p>@Html.DisplayFor(model => model.Time)</p>


    <fieldset>
        @foreach (var item in ViewBag.Questions)
        {
            <p>
            <p><h3>Вопрос :</h3></p>
            <h4>@item.Task</h4>
            <p><h3>Варианты :</h3></p>
            <h5>@item.TrueAnswer</h5>
            <h5>@item.WrongAnswer1</h5>
            <h5>@item.WrongAnswer2</h5>
            <h5>@item.WrongAnswer3</h5>

            @using (Html.BeginForm("DeleteQ", "Test", FormMethod.Post))
            {
                <input type="hidden" name="id_question" value="@item.Id" />
                <input class="input-style" type="submit" value="УДАЛИТЬ" />
            }
            </p>
        }
    </fieldset>



    <!--Переход на редактирование-->
    @using (Html.BeginForm("ViewTestEdit", "Test", FormMethod.Post))
    {
        <input type="hidden" name="id_test" value="@Model.Id" />
        <input class="input-style" type="submit" value="Редактировать" />

    }
</body>
</html>

